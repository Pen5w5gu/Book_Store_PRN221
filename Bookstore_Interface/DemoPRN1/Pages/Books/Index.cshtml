@page
@model DemoPRN1.Pages.Books.IndexModel

<!DOCTYPE html>
<html lang="en">


    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Danh sách</h1>
 

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <a asp-page="/Books/Create" class="btn btn-success btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fa-solid fa-plus"></i>
                </span>
                <span class="text">Thêm sách</span>
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Tên sách</th>
                            <th>Hình ảnh</th>
                            <th>ISBN</th>
                            <th>Mô tả</th>
                            <th>Giá bán</th>
                            <th>Giá thuê</th>
                            <th>Tên tác giả</th>
                            <th>Thời điểm tạo</th>
                            <th>Thời điểm cập nhật</th>
                            <th>Trạng thái</th>
                            <th>Thể loại</th>
                            <th>Số lượng</th>
                            <th>Cho mượn</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>

                         @foreach (var item in Model.Books)
                         {
                             <tr>
                                 <td>@item.BookTitle</td>
                                 <td>
                                     <img src="@Url.Content(@item.Image)" style="width: 50px; height: auto;" />
                                 </td>
                                 <td>@item.Isbn</td>
                                 <td>@item.Description</td>
                                 <td>@item.Price</td>
                                 <td>@item.RentalPrice</td>
                                 <td>@item.Author</td>
                                 <td>@item.CreateAt</td>
                                 <td>@item.UpdateAt</td>
                                 <td>
                                     @(item.Status.HasValue ? (item.Status.Value ? "Còn" : "Đã cho mượn") : "Không xác định")
                                 </td>


                                 <td>@item.Category.CategoryName</td>
                                <td>@item.Quantity</td>
                                <td>@item.RentalQuantity</td>
                                 <td>
                                     <div class="tableFunc">
                                         <a href="/Books/Update?id=@item.BookId" class="btn btn-primary btn-icon-split">
                                             <span class="icon text-white-50">
                                                 <i class="fa-solid fa-pen-to-square"></i>
                                             </span>
                                         </a>

                                        <form method="post" asp-page-handler="Delete" asp-route-id="@item.BookId" style="display:inline;">
                                            <button type="submit" class="btn btn-danger btn-icon-split" onclick="return confirm('Bạn có chắc chắn muốn xóa sách này?');">
                                                <span class="icon text-white-50">
                                                    <i class="fas fa-trash"></i>
                                                </span>
                                            </button>
                                        </form>


                                     </div>
                                 </td>
                             </tr>
                         }


                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
